{% extends "FnpAdminBundle:Default:base.customers.html.twig" %}
{% block title %}Category post creation{% endblock %}
{% block pageId %}new-category{% endblock %}
{% block search %}{% include "FnpAdminBundle:Default:search.html.twig" %}{% endblock %}

{% block body %}

    {{ form_start(form) }}

    {{ form_label(form.category) }}
    {{ form_widget(form.category) }}
    {{ form_errors(form.category) }}
<div class="navigation_btn" style="justify-content: flex-end">
    <button type="submit" class="btn new_btn_post" style="margin-left: 0">
        <i class="fa fa-save" aria-hidden="true"></i> Save
    </button>

    {{ form_widget(form.saveAndCreateNew, {label: 'Save and create new', attr: {class: 'btn new_btn_post'}}) }}
    <a style="margin-right: 0" href="{{ path('admin_post_category_index') }}" class="btn new_btn_post">
        Cancel
    </a>
</div>

    {{ form_end(form) }}

{% endblock %}


